{
	"type": "object",
	"properties": {
		"containers": {
			"type": "object",
			"additionalProperties": false,
			"patternProperties": {
                "^(?![0-9]+$)(?!.*-$)(?!-)[a-zA-Z0-9-]{1,63}$": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"replicas": {
							"type": "integer"
						},
						"image": {
							"type": "string",
							"minLength": 1
						},
						"ports": {
							"type": "array"
						},
						"env": {
							"type": "object",
							"additionalProperties": { "type": "string" }

						},

						"host": {
							"type": "string",
							"minLength": 1
						},
						"volumes": {
                            "type": "object",
                            "additionalProperties": false,
							"patternProperties": {
								"^(?![0-9]+$)(?!.*-$)(?!-)[a-zA-Z0-9-]{1,63}$": {
									"type": "object",
									"properties": {
										"mountpath": {
											"type": "string",
											"minLength": 1
										},
										"diskspace": {
											"type": "string",
											"minLength": 1
										}
									}
								}
							}
						},

						"quotas": {
							"type": "object",
							"properties": {
								
								"min": {
									"type": "object",
									"properties": {
										"cpu": {
											"type": "string",
											"minLength": 1
										},
										"memory": {
											"type": "string",
											"minLength": 1
										}
									}
									
								},
								
								"max": {
										"type": "object",
										"properties": {
											"cpu": {
												"type": "string",
												"minLength": 1
											},
											"memory": {
												"type": "string",
												"minLength": 1
											}
										}
									}
								
							}
						}
					},
					"required": ["image"]
				}
			}
		}
	}
}